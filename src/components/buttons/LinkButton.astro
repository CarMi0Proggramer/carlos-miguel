---
import { COLORS } from "../../constants";

interface Props {
	link: string;
	text: string;
	color: Color;
}

const { link, text, color } = Astro.props;

const className = `inline-flex items-center w-fit px-4 py-2 text-xs font-semibold duration-300 ease-out border rounded-md ${COLORS[color].join(" ")}`;
---

<a
	href={link}
	target="_blank"
	rel="noopener noreferrer"
	role="button"
	class={className}
>
	{text}
	<slot name="icon" />
</a>
