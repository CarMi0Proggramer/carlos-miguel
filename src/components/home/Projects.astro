---
import { Image } from "astro:assets";
import projects from "../../assets/collections/projects.json";
import LinkButton from "../buttons/LinkButton.astro";
import MoreProjects from "./MoreProjects.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Experiencia
  </h2>
  <div class="grid w-full grid-cols-1 gap-7 mt-7">
    {
      projects.map(({ name, description, image, url, date }) => (
        <div class="overflow-hidden flex flex-col rounded-md bg-neutral-100 shadow gap-2 dark:bg-neutral-900 relative">
          <div class="absolute top-0 left-0 p-2 text-sm font-semibold rounded-br bg-neutral-100 dark:bg-neutral-900">
            {date}
          </div>
          <Image
            class="w-full object-contain object-center"
            width={384}
            height={384}
            src={image}
            alt={name}
          />
          <div class="flex flex-col p-2">
            <div class="flex justify-between">
              <h3 class="font-semibold text-lg">{name}</h3>
              <LinkButton color="neutral" text="Ir al Sitio Web" link={url} />
            </div>
            <p class="my-3 text-base text-neutral-600 dark:text-neutral-400 text-pretty">
              {description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
  <MoreProjects />
</section>
