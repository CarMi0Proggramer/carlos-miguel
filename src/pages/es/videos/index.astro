---
import PageHeading from "../../../components/PageHeading.astro";
import VideosList from "../../../components/vue/VideosList.vue";
import Layout from "../../../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translations = useTranslations(lang);
---

<Layout>
  <section class="relative z-20 max-w-xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title={translations.videos.header}
      description={translations.videos.description}
    />
    <VideosList client:load />
  </section>
</Layout>
