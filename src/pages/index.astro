---
import { Image } from "astro:assets";
import SocialLinks from "../components/SocialLinks.astro";
import AboutMe from "../components/home/AboutMe.astro";
import Contact from "../components/home/Contact.astro";
import Projects from "../components/home/Projects.astro";
import Separator from "../components/home/Separator.astro";
import Services from "../components/home/Services.astro";
import Testimonials from "../components/home/Testimonials.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="relative z-20 w-full mt-16 px-7 md:mt-24 lg:px-0">
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full">
        <div class="flex flex-col md:flex-row gap-4 md:gap-6 mb-5">
          <Image
            height={128}
            width={128}
            src="/images/me.webp"
            alt="..."
            class="rounded-full size-32 md:size-40 border-4 border-neutral-400 dark:border-white"
            loading="eager"
          />
          <div class="flex flex-col gap-1 my-auto">
            <h1
              class="text-4xl sm:text-5xl font-bold leading-tight dark:text-white"
            >
              Carlos Miguel
            </h1>
            <p
              class="text-pretty mb-2 text-neutral-600 dark:text-neutral-400 text-base"
            >
              Desarrollador FullStack. Freelancer. Creador de contenido
              educativo.
            </p>
            <SocialLinks />
          </div>
        </div>
      </div>
    </div>
  </section>
  <AboutMe />
  <Separator text="Servicios que ofrezco" />
  <Services />
  <Separator text="Proyectos más recientes" />
  <Projects />
  <Separator text="Testimonios de clientes" />
  <Testimonials />
  <Separator text="Pongámonos en contacto" />
  <Contact />
</Layout>
